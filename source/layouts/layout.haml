!!!
%head
  %title Duarte Salon
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
  %link{:href => "stylesheets/style.css", :media => "screen", :rel => "stylesheet", :title => "style", :type => "text/css"}
  %link{:href => "images/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
  %link{:href => "http://fonts.googleapis.com/css?family=Open+sans:300,400,700|Montserrat", :rel => "stylesheet", :type => "text/css"}
  %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"}
  %script{:src => "javascripts/all.js"}
  %script{:src => "/javascripts/modernizr.js"}

  =csrf_meta_tags

%body{:class => page_classes}
  = partial "layouts/elements/nav"
  #container 
  -if current_page.data.home == true
    .top.homepage
      .hero
        .image-head{ :style => "background-image: url('/images/#{current_page.data.image}.jpg'); background-position-y: 0px;" }
    .home
      .content
        .container
          =yield
          
    .column-container
      %h1 
        = current_year
      .column
        .cover
          %span +
        = link_to image_tag( 'home-bio.jpg'), '/', :class => 'Duarte_logo'
        %h2 + BIO
      .column
        .cover
          %span +
        = link_to image_tag( 'home-services.jpg'), '/', :class => 'Duarte_logo'
        %h2 + SERVICES
      .column
        .cover
          %span +
        = link_to image_tag( 'home-hair-institute.jpg'), '/', :class => 'Duarte_logo'
        %h2 +HAIR INSTITUTE
      .column
        .cover.bottom
          %span +
        = link_to image_tag( 'home-salon.jpg'), '/', :class => 'Duarte_logo'
        %h2 +LOCATION
      .column
        .cover.bottom
          %span +
        = link_to image_tag( 'home-jobs.jpg'), '/', :class => 'Duarte_logo'
        %h2 + JOB OPPORTUNITIES
      .column
        .cover.bottom
          %span +
        = link_to image_tag( 'home-contact.jpg'), '/', :class => 'Duarte_logo'
        %h2 + CONTACT
  -else
    -if current_page.data.hero == true
      .image
        .image-head{ :style => "background-image: url('/images/#{current_page.data.image}.jpg'); background-position-y: 0px;" }
        -if current_page.data.video == true
          .video
            <iframe class="" src="//player.vimeo.com/video/92828313" width="500" height="375" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> 
    .content
      .container
        =yield

  %footer
    %p Duarte Salon 2014 - All Rights Reserved

:javascript
    $('document').ready( function() {
      $('.top').click(function (){
        $('.top').toggleClass( 'demo' );
        $('.home').toggleClass( 'demo-serve' );
      })
    } );